<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" tools:context=".LoginActivity"
    android:background="#fff"
    android:clickable="true"
    android:id="@+id/back">

    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="invisible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Autorization"
                android:id="@+id/textView2"
                android:textAlignment="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/reg_mail"
                android:background="@mipmap/inp"
                android:width="100dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="79dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                style="@style/style_file"
                android:padding="7dp"
                android:hint="Email"
                android:textColor="#fff"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/pass"
                android:layout_below="@+id/reg_mail"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="43dp"
                android:background="@mipmap/inp"
                android:padding="7dp"
                android:hint="Password"
                android:textColor="#fff"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/login_button"
                android:id="@+id/login_button"
                android:background="#f62e24"
                android:padding="15dp"
                android:textColor="#ffffff"
                android:layout_alignTop="@+id/reg_button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:layout_alignParentEnd="false"
                android:layout_marginTop="79dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/reg_text_button"
                android:id="@+id/reg_button"
                android:background="#f62e24"
                android:padding="15dp"
                android:textColor="#ffffff"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/pass"
                android:layout_alignRight="@+id/pass"
                android:layout_alignEnd="@+id/pass"
                android:layout_gravity="top|right"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>



