<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Set AppCompat’s actionBarStyle -->

        <item name="actionBarStyle">@style/MyActionBar</item>

        <!-- Set AppCompat’s color theming attrs -->
        <item name="android:textColor">#000000</item>
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>

        <!-- The rest of your attributes -->
    </style>

    <style name="style_file">broder:1dp solid #ccccc</style>
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background"  tools:ignore="NewApi">#EEEEEE</item>
        <item name="android:textColor">@color/action_color</item>
        <item name="background">@color/action_bar</item>
        <item name="color">@color/action_color</item>
        <item name="titleTextStyle">@style/MyActionBar.Title</item>
        <item name="android:titleTextStyle" tools:targetApi="honeycomb">@style/MyActionBar.Title</item>

    </style>
    <style name="MyActionBar.Title" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:textColor">@color/action_color</item>
    </style>
    <style name="PopupMenu" parent="@android:style/Widget.Holo.ListPopupWindow" tools:targetApi="honeycomb">
        <item name="android:popupBackground">@color/action_color</item>
    </style>



</resources>
